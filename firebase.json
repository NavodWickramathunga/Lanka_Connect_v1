{
    "firestore":  {
                      "database":  "(default)",
                      "location":  "australia-southeast1",
                      "rules":  "firestore.rules",
                      "indexes":  "firestore.indexes.json"
                  },
    "functions":  {
                      "source":  "functions",
                      "disallowLegacyRuntimeConfig":  true,
                      "ignore":  [
                                     "node_modules",
                                     ".git",
                                     "firebase-debug.log",
                                     "firebase-debug.*.log",
                                     "*.local"
                                 ],
                      "predeploy":  [
                                        "npm --prefix \"$RESOURCE_DIR\" run lint",
                                        "npm --prefix \"$RESOURCE_DIR\" run build"
                                    ]
                  },
    "storage":  {
                    "rules":  "storage.rules"
                },
    "emulators":  {
                      "auth":  {
                                   "port":  9099,
                                   "host":  "0.0.0.0"
                               },
                      "firestore":  {
                                        "port":  8080,
                                        "host":  "0.0.0.0"
                                    },
                      "storage":  {
                                      "port":  9199,
                                      "host":  "0.0.0.0"
                                  },
                      "functions":  {
                                        "port":  5001,
                                        "host":  "0.0.0.0"
                                    },
                      "ui":  {
                                 "enabled":  true,
                                 "port":  4000
                             }
                  },
    "hosting":  {
                    "public":  "build/web",
                    "ignore":  [
                                   "firebase.json",
                                   "**/.*",
                                   "**/node_modules/**"
                               ],
                    "rewrites":  [
                                     {
                                         "source":  "**",
                                         "destination":  "/index.html"
                                     }
                                 ]
                }
}
